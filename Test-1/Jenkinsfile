pipeline {
    agent any

    tools {
        jdk 'java-11'        // must match Global Tool name in Jenkins
        maven 'maven'        // must match Global Tool name in Jenkins
    }

    stages {
        stage('git-checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sharath050175/DevOps.git'
            }
        }    

        stage('compile') {
            steps {
                sh 'mvn compile'
            }
        }    

        stage('maven build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('docker build') {
            steps {
                // Build Docker image using the absolute path to Dockerfile
                sh 'docker build -t app -f /var/lib/jenkins/workspace/web-app/Test-1/Dockerfile /var/lib/jenkins/workspace/web-app/Test-1'
            }
        }

        stage('containerization') {
            steps {
                sh 'docker run -it -d --name c1 -p 9000:8080 app || echo "Container already exists"'
            }
        }

        stage('pushing to docker-hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh 'echo $PASS | docker login -u $USER --password-stdin'
                    sh 'docker tag app sharath/app:v1'
                    sh 'docker push sharath/app:v1'
                }
            }
        }
    }        
}
